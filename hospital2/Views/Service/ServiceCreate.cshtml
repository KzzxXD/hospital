@model hospital2.Models.Service
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Створти статю";
}

@using (Html.BeginForm("ServiceCreate", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>
            Добавити послугу
        </legend>
        <div>Назва</div>
        <div>
            @Html.EditorFor(m => m.NameService)
        </div>
        <div>Текст</div>
        <div>
            @Html.EditorFor(m => m.TextService)
        </div>
        <p>FAFA</p>
        @Html.EditorFor(m => m.FaFaIcon)
        <p>
            <input type="submit" value="Добавити" />
        </p>
 
    </fieldset>
}
